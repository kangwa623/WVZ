{
  "expo": {
    "name": "Mota50",
    "slug": "mota50",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mota50",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Mota50 to use your location for trip tracking."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Mota50 to access your photos for receipts and inspections."
        }
      ],
      "expo-document-picker",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Mota50 to access your camera for license scanning and inspections."
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://localhost:8000/api",
      "environment": "development"
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
